{% comment %}
  Custom section with dynamic inputs, CSS grid, and hover effects
{% endcomment %}
{{ 'home-categories-styles.css' | asset_url | stylesheet_tag }}

<section class="custom-section">
  {% assign title = section.settings.title %}
  {% assign paragraph_1 = section.settings.paragraph_1 %}
  {% assign paragraph_2 = section.settings.paragraph_2 %}
  {% assign subtitle = section.settings.subtitle %}

  {% for block in section.blocks %}
    {% assign category_title = block.settings.category_title %}
    {% assign category_link = block.settings.category_link %}
    {% assign category_image = block.settings.category_image %}
    {% assign category_content = block.settings.category_content %}
    {% assign category_number = block.settings.category_number %}

    {%- comment -%} Your existing Liquid code using these variables {%- endcomment -%}
  {% endfor %}

</section>

{% schema %}
{
  "name": "Browse Product Categories",
  "class": "custom-browse-products-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Browse Products"
    },
    {
      "type": "richtext",
      "id": "paragraph_1",
      "label": "Paragraph 1"
    },
    {
      "type": "richtext",
      "id": "paragraph_2",
      "label": "Paragraph 2"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "text",
          "id": "category_title",
          "label": "Category Title"
        },
        {
          "type": "url",
          "id": "category_link",
          "label": "Category Link"
        },
        {
          "type": "image_picker",
          "id": "category_image",
          "label": "Category Image"
        },
        {
          "type": "richtext",
          "id": "category_content",
          "label": "Category Content"
        },
        {
          "type": "number",
          "id": "category_number",
          "label": "Category Number"
        }
      ],
      "limit": 5
    }
  ]
}
{% endschema %}  