{% comment %}
  Custom section with dynamic inputs, CSS grid, and hover effects
{% endcomment %}
{{ 'home-categories-styles.css' | asset_url | stylesheet_tag }}

<section class="custom-product-cat-home">
  <div class="small-title">{% render 'sau' %}</div>
  <h2>test</h2>
  <div class="product-cat-home-mobile">
    {% for block in section.blocks %}
      <div class="each-product-cat-row">
        <div class="product-cat-title-img">
          <span>{{ forloop.index | prepend: '0' }}</span>
          <h3>{{ block.settings.category_title }}{% render 'icon-fat-arrow' %}</h3>
          <img src="{{ block.settings.category_image | image_url: 'large' }}" width="{{ block.settings.category_image.width }}" height="{{ block.settings.category_image.height }}"alt="{{ block.settings.category_image.alt }}" loading="lazy">
        </div>
        
        <div class="example-block__text">{{ block.settings.example_text | escape }}</div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Browse Product Categories",
  "class": "custom-browse-products-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Browse Products"
    },
    {
      "type": "richtext",
      "id": "paragraph_1",
      "label": "Paragraph 1"
    },
    {
      "type": "richtext",
      "id": "paragraph_2",
      "label": "Paragraph 2"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "text",
          "id": "category_title",
          "label": "Category Title"
        },
        {
          "type": "url",
          "id": "category_link",
          "label": "Category Link"
        },
        {
          "type": "image_picker",
          "id": "category_image",
          "label": "Category Image"
          
        },
        {
          "type": "text",
          "id": "figure",
          "label": "Figure",
          "default": "Over 100+"
        },
        {
          "type": "richtext",
          "id": "category_content",
          "label": "Category Content"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#2F6178"
        }
      ],
      "limit": 5
    }
  ],
  "presets": [
    {
      "name": "Browse Product Categories"
    }
  ]
}
{% endschema %}  