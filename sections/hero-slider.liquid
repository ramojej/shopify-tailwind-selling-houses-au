{% comment %}
  Custom Slider Section
{% endcomment %}

<div class="custom-slider">
  <div class="slider-container">
    {% for block in section.blocks %}
      <div class="slide">
        <div class="slide-content">
          <a href="{{ block.settings.product_link }}" class="slide-link">
            <h2>{{ block.settings.text }}</h2>
            <img src="{{ block.settings.product_image.src | img_url: '500x' }}" width={{block.settings.product_image.width}} height="{{ block.settings.product_image.height }}" alt="{{ block.settings.product_image.alt }}" class="product-image">
            <p class="product-price">{{ block.settings.product_price | money }}</p>
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
  <button class="prev-button">&#10094;</button>
  <button class="next-button">&#10095;</button>
</div>

{% schema %}
  {
    "name": "Custom Slider",
    "class": "custom-slider-section",
    "max_blocks": 5,
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "url",
            "id": "product_link",
            "label": "Product Link"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "image_picker",
            "id": "product_image",
            "label": "Product Image"
          },
          {
            "type": "text",
            "id": "product_price",
            "label": "Product Price",
            "default": "0"
          }
        ]
      }
    ]
  }
{% endschema %}

{% style %}
  .custom-slider {
    position: relative;
    overflow: hidden;
  }
  .slider-container {
    display: flex;
    transition: transform 0.5s ease;
  }
  .slide {
    flex: 0 0 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .prev-button,
  .next-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    font-size: 2rem;
    z-index: 1;
    cursor: pointer;
  }
  .prev-button {
    left: 10px;
  }
  .next-button {
    right: 10px;
  }
{% endstyle %}

{% javascript %}
  document.addEventListener('DOMContentLoaded', function() {
    const slider = document.querySelector('.custom-slider .slider-container');
    const prevButton = document.querySelector('.custom-slider .prev-button');
    const nextButton = document.querySelector('.custom-slider .next-button');
    let slideIndex = 0;

    function showSlide(index) {
      slider.style.transform = `translateX(-${index * 100}%)`;
    }

    function nextSlide() {
      slideIndex = (slideIndex + 1) % slider.children.length;
      showSlide(slideIndex);
    }

    function prevSlide() {
      slideIndex = (slideIndex - 1 + slider.children.length) % slider.children.length;
      showSlide(slideIndex);
    }

    prevButton.addEventListener('click', prevSlide);
    nextButton.addEventListener('click', nextSlide);
  });
{% endjavascript %}